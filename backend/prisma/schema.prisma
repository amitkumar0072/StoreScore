generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  address   String
  password  String
  role      Role
  createdAt DateTime @default(now())
  ratings   Rating[]
  stores    Store[]
}

model Store {
  id        String   @id @default(uuid())
  name      String   @unique 
  email     String
  address   String 
  ownerId   String
  createdAt DateTime @default(now())
  ratings   Rating[]
  owner     User     @relation(fields: [ownerId], references: [id])
}

model Rating {
  id        String   @id @default(uuid())
  rating    Int
  userId    String
  storeId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  store     Store    @relation(fields: [storeId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, storeId])
}

enum Role {
  ADMIN
  USER
  STORE_OWNER
}
