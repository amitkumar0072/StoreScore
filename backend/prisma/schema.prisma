datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  USER
  STORE_OWNER
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  address   String
  password  String
  role      Role
  stores    Store[]
  ratings   Rating[]
  createdAt DateTime @default(now())
}

model Store {
  id        String   @id @default(uuid())
  name      String
  email     String
  address   String
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  ratings   Rating[]
  createdAt DateTime @default(now())
}

model Rating {
  id        String   @id @default(uuid())
  rating    Int
  userId    String
  storeId   String
  user      User    @relation(fields: [userId], references: [id])
  store     Store   @relation(fields: [storeId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, storeId])
}
